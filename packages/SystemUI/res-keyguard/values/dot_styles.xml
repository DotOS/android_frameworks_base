<resources>
    <!--  dot lockscreen -->
    <style name="dotHoursTextStyle" parent="@style/dot">
        <item name="android:textSize">150.0dip</item>
        <item name="android:textStyle">italic</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">big-noodle</item>
    </style>
    <style name="dot">
        <item name="android:shadowColor">@color/dot_color</item>
        <item name="android:shadowDy">@dimen/dot_dy</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowRadius">@dimen/dot_radius</item>
    </style>
    <style name="dotMinutesTextStyle" parent="@style/dot">
        <item name="android:textSize">60.0dip</item>
        <item name="android:textStyle">italic</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">big-noodle</item>
    </style>
    <style name="dot_style">
        <item name="android:textSize">@dimen/widget_label_font_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">big-noodle</item>
    </style>
</resources>
