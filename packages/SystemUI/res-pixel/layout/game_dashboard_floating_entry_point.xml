<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@id/game_dashboard_entry_button"
        android:layout_width="@dimen/game_dashboard_floating_entry_point_height"
        android:layout_height="@dimen/game_dashboard_floating_entry_point_height"
        android:background="@drawable/circle"
        android:backgroundTint="@color/game_dashboard_color_surface_variant"
        android:contentDescription="@string/accessibility_game_dashboard_entry"
        android:elevation="3.0dip"
        android:padding="@dimen/game_dashboard_floating_entry_point_padding"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_game_mode_standard"
        android:tint="@color/game_dashboard_text_color_primary"
        android:visibility="visible" />

</LinearLayout>
