<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/game_dashboard_entry_point"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@id/game_dashboard_entry_button"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:background="@drawable/rounded_rectangle_16dp"
        android:backgroundTint="@color/game_dashboard_color_accent_primary"
        android:contentDescription="@string/accessibility_game_dashboard_entry"
        android:elevation="3.0dip"
        android:padding="@dimen/game_dashboard_floating_entry_point_padding"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_game_mode_standard"
        android:tint="@color/game_dashboard_text_color_on_accent"
        android:visibility="visible" />

</LinearLayout>
