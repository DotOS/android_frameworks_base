<?xml version="1.0" encoding="utf-8"?>
<com.google.android.systemui.gamedashboard.WidgetView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0.0dip"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rectangle_28dp"
    android:backgroundTint="@color/game_dashboard_color_surface"
    android:layout_weight="1.0"
    android:orientation="vertical"
    android:padding="@dimen/game_menu_widget_padding">

    <LinearLayout
        android:id="@id/content_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dip">

            <ImageView
                android:id="@id/icon"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:background="@drawable/game_dashboard_button_background"
                android:backgroundTint="@color/game_dashboard_color_surface"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@id/tip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="google-sans"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:maxLines="1"
                android:textColor="?android:textColorSecondary"
                android:textSize="14.0sp" />

        </RelativeLayout>

        <TextView
            android:id="@id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="balanced"
            android:ellipsize="none"
            android:fontFamily="google-sans"
            android:hyphenationFrequency="none"
            android:layout_marginBottom="12.0dip"
            android:lines="2"
            android:maxLines="2"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/game_menu_widget_title_text_size" />

        <TextView
            android:id="@id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="balanced"
            android:ellipsize="end"
            android:fontFamily="google-sans"
            android:hyphenationFrequency="none"
            android:lines="2"
            android:maxLines="2"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/game_menu_widget_description_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/loading_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:background="@drawable/game_dashboard_button_background"
            android:backgroundTint="@color/game_dashboard_color_surface_variant"
            android:layout_marginBottom="16.0dip" />

        <ImageView
            android:layout_width="128.0dip"
            android:layout_height="28.0dip"
            android:background="@drawable/rounded_rectangle_8dp"
            android:backgroundTint="@color/game_dashboard_color_surface_variant"
            android:layout_marginBottom="40.0dip" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="16.0dip"
            android:background="@drawable/rounded_rectangle_8dp"
            android:backgroundTint="@color/game_dashboard_color_surface_variant"
            android:layout_marginBottom="8.0dip" />

        <ImageView
            android:layout_width="108.0dip"
            android:layout_height="16.0dip"
            android:background="@drawable/rounded_rectangle_8dp"
            android:backgroundTint="@color/game_dashboard_color_surface_variant" />

    </LinearLayout>

</com.google.android.systemui.gamedashboard.WidgetView>
