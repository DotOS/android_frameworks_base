    android:orientation="horizontal"
    android:paddingBottom="14.0dip"
    android:paddingEnd="20.0dip"
    android:paddingStart="20.0dip"
    android:paddingTop="14.0dip"
    android:theme="@style/Theme.SystemUI.QuickSettings"
